<?php if($page->hasBreadcrumbs()): ?>
	<ul class="breadcrumb">
		<?php foreach($page->breadcrumbs() as $breadcrumb): ?>
			<?php if($breadcrumb->link): ?>
				<li>
					<a href="<?php echo e($breadcrumb->link); ?> "><?php echo e($breadcrumb->name); ?></a>
					<span class="dividider">/</span>
				</li>
			<?php else: ?>
				<li class="active"><?php echo e($breadcrumb->name); ?></span>
			<?php endif; ?>
		<?php endforeach; ?>
    </ul>
<?php endif; ?>